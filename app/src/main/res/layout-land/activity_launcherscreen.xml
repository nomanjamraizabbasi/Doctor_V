<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient"
        tools:context="com.example.mjamraizabbasi.doctorvinterfaces.launcherscreenActivity">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="270dp"
            android:layout_height="195dp"
            android:background="@android:color/transparent"
            android:src="@drawable/doctorlogo1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.512"
            android:layout_marginTop="66dp" />

        <Button
            android:id="@+id/diagnosisBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/diagnosisbtnbg"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:text="Quick Diagnosis"
            android:textAllCaps="false"
            android:textColor="#0080FF"
            android:textSize="17sp"
            app:layout_constraintLeft_toLeftOf="@+id/logo"
            app:layout_constraintRight_toRightOf="@+id/logo"
            android:layout_marginTop="89dp"
            app:layout_constraintTop_toBottomOf="@+id/logo"
            app:layout_constraintHorizontal_bias="1.0"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintLeft_creator="1" />

        <Button
            android:id="@+id/launcherloginBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="29dp"
            android:background="@drawable/launcherloginbtn"
            android:textSize="17sp"
            android:text="Sign in"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@+id/diagnosisBtn"
            app:layout_constraintRight_toRightOf="@+id/diagnosisBtn"
            app:layout_constraintTop_toBottomOf="@+id/diagnosisBtn"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_editor_absoluteX="79dp" />

        <TextView
            android:id="@+id/textview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dont have an account?"
            android:textColor="@android:color/white"
            android:fontFamily="sans-serif"
            app:layout_constraintLeft_toLeftOf="@+id/launcherloginBtn"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="536dp"
            app:layout_constraintRight_toLeftOf="@+id/signUpET"
            android:layout_marginRight="8dp" />

        <TextView
            android:id="@+id/signUpET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textColor="@android:color/white"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:clickable="true"
            android:textSize="18sp"
            app:layout_constraintRight_toRightOf="@+id/launcherloginBtn"
            android:layout_marginRight="27dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="529dp" />
    </android.support.constraint.ConstraintLayout>
</ScrollView>