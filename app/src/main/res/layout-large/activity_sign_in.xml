<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context="com.example.mjamraizabbasi.doctorvinterfaces.signInActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="254dp"
        android:layout_height="199dp"
        android:layout_marginTop="102dp"
        android:background="@android:color/transparent"
        android:src="@drawable/doctorlogo1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.498" />

    <EditText
        android:id="@+id/username_login_ET"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:background="@drawable/textfieldbackground"
        android:drawableLeft="@drawable/user16"
        android:drawablePadding="10dp"
        android:ems="15"
        android:fontFamily="sans-serif"
        android:hint="Username/ Email"
        android:inputType="text|textEmailAddress"
        android:paddingBottom="20dp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/diagnosisBtn"
        android:layout_marginLeft="175dp"
        android:layout_marginRight="175dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_width="0dp"
        android:layout_marginStart="175dp"
        android:layout_marginEnd="175dp" />

    <EditText
        android:id="@+id/password_login_ET"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="175dp"
        android:layout_marginRight="175dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/textfieldbackground"
        android:drawableLeft="@drawable/padlock16"
        android:drawablePadding="10dp"
        android:ems="15"
        android:fontFamily="sans-serif"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingBottom="20dp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username_login_ET"
        android:layout_marginStart="175dp"
        android:layout_marginEnd="175dp" />

    <Button
        android:id="@+id/loginBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="175dp"
        android:layout_marginRight="175dp"
        android:background="@drawable/loginbtnbg"
        android:fontFamily="sans-serif"
        android:text="Sign in"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_login_ET"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="175dp"
        android:layout_marginEnd="175dp" />

    <TextView
        android:id="@+id/forgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:autoLink="all"
        android:clickable="true"
        android:textSize="25sp"
        android:fontFamily="sans-serif"
        android:text="Forgot Password?"
        android:textColor="@android:color/white"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintLeft_toLeftOf="@+id/loginBtn"
        app:layout_constraintRight_toRightOf="@+id/loginBtn"
        app:layout_constraintTop_toBottomOf="@+id/loginBtn"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <Button
        android:id="@+id/diagnosisBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:background="@drawable/diagnosisbtnbg"
        android:fontFamily="sans-serif"
        android:text="Quick Diagnosis"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        android:layout_marginLeft="175dp"
        android:layout_marginRight="175dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="175dp"
        android:layout_marginEnd="175dp" />

    <TextView
        android:id="@+id/textview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dont have an account?"
        android:textColor="@android:color/white"
        android:fontFamily="sans-serif"
        android:textSize="23sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/signUpET"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@+id/forgotPassword" />

    <TextView
        android:id="@+id/signUpET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Sign Up"
        android:textColor="@android:color/white"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:clickable="true"
        android:textSize="26sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/textview1"
        android:layout_marginTop="34dp"
        app:layout_constraintTop_toBottomOf="@+id/forgotPassword" />

</android.support.constraint.ConstraintLayout>
